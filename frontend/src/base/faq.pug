extends /layouts/mainLayout.pug

block vars
  - var currentURL = "/faq"
  - var breadcrumbs = {'Home':"/", "FAQ": "/faq"}

block pageTitle
  h1(th:text="${@templateUtils.md('index_title')}") FAQ

