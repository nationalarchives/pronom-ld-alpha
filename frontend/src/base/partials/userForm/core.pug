  .form-partial-content
    form(aria-label="Add new file format")
      h4.border Main
        .part
          fieldset
            .form-row
              .tooltip-container
                .label
                  label(for="FileFormatName") File format name (required)
                  span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                    .i-wrapper
                      i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
              input(name="FileFormatName" id="FileFormatName")
            .form-row
              .tooltip-container
                .label
                  label(for="Version") Version
                  span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                    .i-wrapper
                      i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
              input(name="Version" id="Version")
            .form-row
              .tooltip-container
                .label
                  label(for="FileFormatDescription") File format description
                  span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                    .i-wrapper
                      i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
              textarea(cols="30", rows="10" name="FileFormatDescription" id="FileFormatDescription")
            .form-row
              .tooltip-container
                .label
                  label(for="FormatType") Format type
                  span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                    .i-wrapper
                      i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
              input(name="FormatType" id="FormatType")
      h4.border References
        .part
          fieldset
            .row-group.inline#references
              .form-row
                .tooltip-container
                  .label
                    label(for="Name") Name
                    span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                      .i-wrapper
                        i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                input(name="Name" id="Name")

              .form-row
                  .tooltip-container
                    .label
                      label(for="LinkURL") Link URL
                      span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                        .i-wrapper
                          i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                  input(name="LinkURL" id="LinkURL")
                
              .form-row.checkbox-container
                input(name="Documentation" id="Documentation" type="checkbox")
                .tooltip-container
                  .label
                    label(for="Documentation") Documentation
                    span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                      .i-wrapper
                        i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
              .additional-fields
