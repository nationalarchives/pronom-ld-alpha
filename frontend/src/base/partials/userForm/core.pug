- var formAction = 'add'

section.form-part#core
  .smallScreen
    button.accordion
      i.fa-solid.fa-chevron-down
      h2 Core
  .largeScreen
    .form-header-main
      h2 Core
      .nav
        button.bordered-blue.medium.right.next
          | Next
          i.fa-solid.fa-angles-right
  .form-partial-content
    form(aria-label="Add new file format")
        //- TODO make sure to display only if editing file format (var formAction = 'edit')
        if(formAction === 'edit')
          .part
            include ./searchPUID.pug  
        h4.border Main
        .part
          fieldset
            //- TODO - read INFO : 
            //- 1) each .form-row has unique id with dashes (inside is input with same name and id just cammel case)
            //- 2) if element is to be reviewed add class '.before-review' or 'after-review'
            .form-row#file-format-name.after-review
              p.inputType New content
              .tooltipPlusAction
                .tooltip-container
                  .label
                    label(for="FileFormatName") File format name (required)
                    span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                      .i-wrapper
                        i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                .action-monitoring
                  .review-type
                    i.fa-solid.fa-triangle-exclamation(aria-hidden="true")
                    p Require reviewing
                  .review-type
                    i.fa-solid.fa-square-check
                    p Reviewed
              .input-group
                button Revert changes
                input(name="FileFormatName" id="FileFormatName")
            .form-row.before-review
              p.inputType Edited content
              .tooltipPlusAction
                .tooltip-container
                  .label
                    label(for="Version") Version
                    span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                      .i-wrapper
                        i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                .action-monitoring
                  .review-type
                    i.fa-solid.fa-triangle-exclamation(aria-hidden="true")
                    p Require reviewing
                  .review-type
                    i.fa-solid.fa-square-check
                    p Reviewed
              .input-group
                button Accept current
                input(name="Version" id="Version")
              .input-group
                button Accept incoming
                input(name="Version" id="Version")

            .form-row#file-format-description
              .tooltip-container
                .label
                  label(for="FileFormatDescription") File format description
                  span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                    .i-wrapper
                      i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
              textarea(cols="30", rows="10" name="FileFormatDescription" id="FileFormatDescription")
            .form-row#format-type
              .tooltip-container
                .label
                  label(for="FormatType") Format type
                  span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                    .i-wrapper
                      i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
              input(name="FormatType" id="FormatType")
            include ./priority-over.pug
        h4.border References
        .part
          fieldset
            .row-group.inline#reference-name
              .form-row#reference-name
                .tooltip-container
                  .label
                    label(for="ReferenceName") Reference Name
                    span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                      .i-wrapper
                        i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                input(name="ReferenceName" id="ReferenceName")

              .form-row#reference-link-url
                  .tooltip-container
                    .label
                      label(for="ReferenceLinkURL") Link URL
                      span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                        .i-wrapper
                          i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                  input(name="ReferenceLinkURL" id="ReferenceLinkURL")
              .form-row#reference-documentation.checkbox-container
                input(name="ReferenceDocumentation" id="ReferenceDocumentation" type="checkbox")
                .tooltip-container
                  .label
                    label(for="ReferenceDocumentation") Documentation
                    span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                      .i-wrapper
                        i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
              .additional-fields
                .form-row#reference-author
                  .tooltip-container
                    .label
                      label(for="ReferenceAuthor") Author
                      span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                        .i-wrapper
                          i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                  input(name="ReferenceAuthor" id="ReferenceAuthor")
                .form-row#reference-identifiers
                  .tooltip-container
                    .label
                      label(for="ReferenceIdentifiers") Identifiers
                      span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                        .i-wrapper
                          i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                  input(name="ReferenceIdentifiers" id="ReferenceIdentifiers")
                .form-row
                  .tooltip-container
                    .label
                      label(for="PublicationDate") Publication date
                      span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                        .i-wrapper
                          i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                  input(name="PublicationDate" id="PublicationDate")
                .form-row
                  .tooltip-container
                    .label
                      label(for="Type") Type
                      span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                        .i-wrapper
                          i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                  input(name="Type" id="Type")
                .form-row
                  .tooltip-container
                    .label
                      label(for="FormatType") Note
                      span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                        .i-wrapper
                          i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                  input(name="FormatType" id="FormatType")
              .button-container
                button.bordered-red.small.push-right
                  | Delete reference
          .button-container
            button.black.medium.push-right#add-reference
              | Add reference
          
          
    


