                  input(name="Author" id="Author")
                .form-row
                  .tooltip-container
                    .label
                      label(for="Identifiers") Identifiers
                      span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                        .i-wrapper
                          i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                  input(name="Identifiers" id="Identifiers")
                .form-row
                  .tooltip-container
                    .label
                      label(for="PublicationDate") Publication date
                      span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                        .i-wrapper
                          i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                  input(name="PublicationDate" id="PublicationDate")
                .form-row
                  .tooltip-container
                    .label
                      label(for="Type") Type
                      span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                        .i-wrapper
                          i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
