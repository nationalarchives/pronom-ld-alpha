section.form-part#relationships
  .smallScreen
    button.accordion
      i.fa-solid.fa-chevron-down
      h2 Relationships
  .largeScreen
    .from-external-only
      .form-header-main
        h2 More information
        .nav
          button.bordered-blue.medium.left.prevSkip
            i.fa-solid.fa-angles-left
            | Prev
          button.bordered-blue.medium.right.nextSkip
            | Next
            i.fa-solid.fa-angles-right
      .form-header-sub
        h3 Relationships
        .nav
          button.bordered-blue.xsmall.left.prev
            i.fa-solid.fa-angles-left
            | Prev
          button.bordered-blue.xsmall.right.next
            | Next
            i.fa-solid.fa-angles-right
    .from-internal-only
      .form-header-main
        h2 Relationships
        .nav
          button.bordered-blue.medium.left.prev
            i.fa-solid.fa-angles-left
            | Prev
          button.bordered-blue.medium.right.next
            | Next
            i.fa-solid.fa-angles-right
  .form-partial-content
    fieldset
      legend.sr-only Provide relationships and format families
      #relationships-list.row-group
        .relationship

          //- Choose relationship type
          .form-row(th:classappend="${compare?.relationshipType} ? 'before-review' : ''")
            p.inputType(th:text="${#strings.isEmpty(ff?.relationshipType) ? 'New content' : 'Edited content'}") New content
            .tooltipPlusAction
              .tooltip-container
                .label
                  label(for="relationshipType") Choose relationship type
                  span.tooltip-toggle(aria-label=htmlWebpackPlugin.options.getTooltip('external', '3.3.1') tabindex='0')
                    .i-wrapper
                      i.fa.fa-solid.fa-circle-info(role="img" aria-label="information icon")
              .action-monitoring
                .review-type
                  i.fa-solid.fa-triangle-exclamation(aria-hidden="true")
                  p Require reviewing
                .review-type
                  i.fa-solid.fa-square-check
                  p Reviewed
            .input-group
              button.current Accept current
              select(id="relationshipType", th:field="*{relationshipType}")
                option(th:each="fio : ${relationshipTypeOptions}", th:value="${fio.value}", th:text="${fio.label}") option 1
            .input-group
              button.incoming Accept incoming
              select(th:if="${compare?.relationshipType}" id="relationshipType")
                option(th:each="fio : ${relationshipTypeOptions}", th:value="${compare.relationshipType}", th:text="${fio.label}") option 1

          //- Related file format
          .form-row(th:classappend="${compare?.relatedFileFormat} ? 'before-review' : ''")
            p.inputType(th:text="${#strings.isEmpty(ff?.relatedFileFormat) ? 'New content' : 'Edited content'}") New content
            .tooltipPlusAction
              .tooltip-container
                .label
                  label(for="relatedFileFormat") Related file format
                  span.tooltip-toggle(aria-label=htmlWebpackPlugin.options.getTooltip('external', '3.3.2') tabindex='0')
                    .i-wrapper
                      i.fa.fa-solid.fa-circle-info(role="img" aria-label="information icon")
              .action-monitoring
                .review-type
                  i.fa-solid.fa-triangle-exclamation(aria-hidden="true")
                  p Require reviewing
                .review-type
                  i.fa-solid.fa-square-check
                  p Reviewed
            .input-group
              button Accept current
              input(name="relatedFileFormat" id="relatedFileFormat" th:field="*{relatedFileFormat}", th:data-undo="${ff?.relatedFileFormat}")
            .input-group(th:if="${compare?.relatedFileFormat}")
              button.incoming Accept incoming
              input(th:value="${compare.relatedFileFormat}" name="relatedFileFormat" id="relatedFileFormat")
          .button-container
            button.bordered-red.small.delete-relationship
              | Delete relationship
      .button-container
        button.black.small.push-right.add-relationship
          | Add relationship

      //- Format families
      .form-row(th:classappend="${compare?.formatFamilies} ? 'before-review' : ''")
        p.inputType(th:text="${#strings.isEmpty(ff?.formatFamilies) ? 'New content' : 'Edited content'}") New content
        .tooltipPlusAction
          .tooltip-container
            .label
              label(for="formatFamilies") Format families
              span.tooltip-toggle(aria-label=htmlWebpackPlugin.options.getTooltip('external', '3.3.3') tabindex='0')
                .i-wrapper
                  i.fa.fa-solid.fa-circle-info(role="img" aria-label="information icon")
          .action-monitoring
            .review-type
              i.fa-solid.fa-triangle-exclamation(aria-hidden="true")
              p Require reviewing
            .review-type
              i.fa-solid.fa-square-check
              p Reviewed
        .input-group
          button Accept current
          input(name="formatFamilies" id="formatFamilies" th:field="*{formatFamilies}", th:data-undo="${ff?.formatFamilies}")
        .input-group(th:if="${compare?.formatFamilies}")
          button.incoming Accept incoming
          input(th:value="${compare.formatFamilies}" name="formatFamilies" id="formatFamilies")