section.form-part#yourDetails
  .smallScreen
    button.accordion
      i.fa-solid.fa-chevron-down
      h2 Your details
  .largeScreen
    .form-header-main
      h2 Your details
      .nav
        button.bordered-blue.medium.left.prev
          i.fa-solid.fa-angles-left
          | Prev
        button.bordered-blue.medium.right.next
          | Next
          i.fa-solid.fa-angles-right
  .form-partial-content
        fieldset
          legend.sr-only Add your details and any additional comments
          #main-details
            div
              .form-row
                .tooltip-container
                  .label
                    label(for="UserName") Name
                    span.tooltip-toggle(aria-label=htmlWebpackPlugin.options.getTooltip('form', '4.1') tabindex='0')
                      .i-wrapper
                        i.fa.fa-solid.fa-circle-info(role="img" aria-label="information icon")
                input(name="UserName", id="UserName", th:field="*{submittedBy.name}")
              .form-row
                .tooltip-container
                  .label
                    label(for="Organisation") Organisation
                    span.tooltip-toggle(aria-label=htmlWebpackPlugin.options.getTooltip('form', '4.2') tabindex='0')
                      .i-wrapper
                        i.fa.fa-solid.fa-circle-info(role="img" aria-label="information icon")
                input(name="Organisation" id="Organisation" th:field="*{submittedBy.organisation}")
              .form-row
                .tooltip-container
                  .label
                    label(for="Email") Contact email(required)
                    span.tooltip-toggle(aria-label=htmlWebpackPlugin.options.getTooltip('form', '4.3') tabindex='0')
                      .i-wrapper
                        i.fa.fa-solid.fa-circle-info(role="img" aria-label="information icon")
                input(name="Email" id="Email" th:field="*{submittedBy.email}")
              .form-row
                .tooltip-container
                  .label
                    label(for="Country") Country
                    span.tooltip-toggle(aria-label=htmlWebpackPlugin.options.getTooltip('form', '4.4') tabindex='0')
                      .i-wrapper
                        i.fa.fa-solid.fa-circle-info(role="img" aria-label="information icon")
                input(name="Country" id="Country" th:field="*{submittedBy.country}")
            div
              .form-row
                .tooltip-container
                  .label
                    label(for="Comment") Comment
                    span.tooltip-toggle(aria-label=htmlWebpackPlugin.options.getTooltip('form', '4.5') tabindex='0')
                      .i-wrapper
                        i.fa.fa-solid.fa-circle-info(role="img" aria-label="information icon")
                textarea(cols="30", rows="10" name="Comment" id="Comment" th:field="*{submittedBy.comment}")
          #recognition
            h3 Recognition (required)
            div
              fieldset
                legend.sr-only Select if you would like to be recognised for your contribution
                .form-row.checkbox-container
                  input(type="radio" id="permission" name="isAnonymous" value="false" th:field="*{submittedBy.isAnonymous}")
                  .tooltip-container
                    .label
                      label(for="permission") I give permission for my details to be recorded and displayed on PRONOM
                      span.tooltip-toggle(aria-label=htmlWebpackPlugin.options.getTooltip('form', '4.6') tabindex='0')
                        .i-wrapper
                          i.fa.fa-solid.fa-circle-info(role="img" aria-label="information icon")
                .form-row.checkbox-container
                  input(type="radio" id="permission" name="isAnonymous" value="true" th:field="*{submittedBy.isAnonymous}" checked)
                  .tooltip-container
                    .label
                      label(for="permission") Prefer to stay anonymous
                      span.tooltip-toggle(aria-label=htmlWebpackPlugin.options.getTooltip('form', '4.6') tabindex='0')
                        .i-wrapper
                          i.fa.fa-solid.fa-circle-info(role="img" aria-label="information icon")
