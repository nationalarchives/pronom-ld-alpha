section.form-part#signatures
  .smallScreen
    button.accordion
      i.fa-solid.fa-chevron-down
      h2 Signatures
  .largeScreen
    .form-header-main
      h2 Signatures
      .nav
        button.bordered-blue.medium.left.prev
          i.fa-solid.fa-angles-left
          | Prev
        button.bordered-blue.medium.right.next
          | Next
          i.fa-solid.fa-angles-right
  .form-partial-content
      //- signature select
      .part
        fieldset
          legend.sr-only Select signature type you wish to add
          #signature-controls
            #select-signature
              div
                .tooltip-container
                  .label
                    label(for="Documentation") Select signature type
                    span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                      .i-wrapper
                        i.fa.fa-solid.fa-circle-info(role="img" aria-label="information icon")
                div
                  select(id="select-signature-type")
                    option(value='signature') Signature
                    option(value='container-signature') Container Signature
              .button-container
                button.black.small#add-signature
                  | Add signature
            .collapse-buttons
              button.bordered-blue.small.open-all-signatures
                | Open all
                i.fa-solid.fa-chevron-down
              button.bordered-blue.small.collapse-all-signatures
                | Collapse all
                i.fa-solid.fa-chevron-up
        //- Signature 
        #signature-container
          .holder
            //- Path
            .row-group-inner1.path
              .button-container 
                button.bordered-red.small.push-right.delete-path
                  | Delete path
              .form-row(th:classappend="${compare?.path} ? 'before-review' : ''")
                p.inputType(th:text="${#strings.isEmpty(ff?.path) ? 'New content' : 'Edited content'}") New content
                .tooltipPlusAction
                  .tooltip-container
                    .label
                      label.from-external-only(for="path") Path
                      label.from-internal-only(for="path") Path (required)
                      span.tooltip-toggle(aria-label=htmlWebpackPlugin.options.getTooltip('external', '2.4.7') tabindex='0')
                        .i-wrapper
                          i.fa.fa-solid.fa-circle-info(role="img" aria-label="information icon")
                  .action-monitoring
                    .review-type
                      i.fa-solid.fa-triangle-exclamation(aria-hidden="true")
                      p Require reviewing
                    .review-type
                      i.fa-solid.fa-square-check
                      p Reviewed
                .input-group
                  button Accept current
                  input(name="path" id="path" th:field="*{path}", th:data-undo="${ff?.path}")
                .input-group(th:if="${compare?.path}")
                  button.incoming Accept incoming
                  input(th:value="${compare.path}")
              .byte-sequence-list
                .list
                .button-container
                  button.black.small.add-byte-sequence.push-right
                    | Add byte sequence

