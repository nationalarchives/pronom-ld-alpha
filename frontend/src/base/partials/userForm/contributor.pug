//- this form section does not require editorial wrapper with '.before-review'
section.form-part#contributors
  .smallScreen
    button.accordion
      i.fa-solid.fa-chevron-down
      h2 Contributors
  .largeScreen
    .form-header-main
      h2 Contributors
      .nav
        button.bordered-blue.medium.left.prev
          i.fa-solid.fa-angles-left
          | Prev
        button.bordered-blue.medium.right.next
          | Next
          i.fa-solid.fa-angles-right
  .form-partial-content
    #manage-contributors-buttons
      button.black.small
        | Add contributor
    .contributors-list
      .row-group.action-container
        .form-row
          .tooltip-container
            .label
              label(for="ActionDate") Date
              span.tooltip-toggle(aria-label=htmlWebpackPlugin.options.getTooltip('form', '6.1') tabindex='0')
                .i-wrapper
                  i.fa.fa-solid.fa-circle-info(role="img" aria-label="information icon")
          input.date(name="ActionDate" id="ActionDate" type="date")
        .form-row
          .tooltip-container
            .label
              label(for="Contributor") Contributor
              span.tooltip-toggle(aria-label=htmlWebpackPlugin.options.getTooltip('form', '6.2') tabindex='0')
                .i-wrapper
                  i.fa.fa-solid.fa-circle-info(role="img" aria-label="information icon")
          input(name="Contributor" id="Contributor")
        .form-row
          .tooltip-container
            .label
              label(for="Action") Action
              span.tooltip-toggle(aria-label=htmlWebpackPlugin.options.getTooltip('form', '6.3') tabindex='0')
                .i-wrapper
                  i.fa.fa-solid.fa-circle-info(role="img" aria-label="information icon")
          input(name="Action" id="Action")
        button.bordered-red.small.delete-record
          | Delete record
    .button-container
      button.black.small.push-right.add-record
        | Add record