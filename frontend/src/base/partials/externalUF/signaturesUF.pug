  .form-partial-content
    h4.border Signatures
      //- signature select
      .part
        fieldset
          legend.sr-only Select signature type you wish to add
          #signature-controls
            #select-signature
              div
                .tooltip-container
                  .label
                    label(for="Documentation") Select signature type
                    span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                      .i-wrapper
                        i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                div
                  select(id="sort_by")
                    option(value='0') Signature
                    option(value='1') Container Signature
              .button-container
                button.black.small#add-signature
                  | Add signature
            .collapse-buttons
              button.bordered-blue.small
                | Open all
                i.fa-solid.fa-chevron-down
              button.bordered-blue.small
                | Collapse all
                i.fa-solid.fa-chevron-up
        //- Signature 
        div
          fieldset
            legend.sr-only Fill up information about signature
            .row-group
              .top
                button.accordion
                  .info
                    p Signature type: Signature
                    p PUID: (some PUID if any)
                  i.fa-solid.fa-chevron-up
                button.bordered-red.small
                  | Delete signature
              .collapse-content
                .form-row
                  .tooltip-container
                    .label
                      label(for="FileFormatName") Signature name
                      span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                        .i-wrapper
                          i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                  input(name="FileFormatName" id="FileFormatName")
                .form-row.checkbox-container
                  input(name="Documentation" id="Documentation" type="checkbox")
                  .tooltip-container
                    .label
                      label(for="Documentation") Generic Flag
                      span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                        .i-wrapper
                          i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                h5.border Byte Sequence
                .part
                  div
                    .tooltip-container
                      .label
                        label(for="endianess") Select endianess
                        span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                          .i-wrapper
                            i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                    select(id="endianess")
                      option(value='0') option1
                      option(value='1') option2
                  .form-row
                    .tooltip-container
                      .label
                        label(for="FileFormatDescription") Description
                        span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                          .i-wrapper
                            i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                    textarea(cols="30", rows="6" name="FileFormatDescription" id="FileFormatDescription")
                  //- byte sequence
                  .row-group-inner2
                    .info
                      h6 Byte sequence
                      button.bordered-red.small
                        | Delete byte sequence
                    .form-row
                      .tooltip-container
                        .label
                          label(for="FileFormatName") Binary value
                          span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                            .i-wrapper
                              i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                      input(name="FileFormatName" id="FileFormatName")
                    .form-row
                      .tooltip-container
                        .label
                          label(for="FileFormatName") Position type
                          span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                            .i-wrapper
                              i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                      input(name="FileFormatName" id="FileFormatName")
                    .form-row
                      .tooltip-container
                        .label
                          label(for="FileFormatName") Min offset
                          span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                            .i-wrapper
                              i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                      input(name="FileFormatName" id="FileFormatName")
                    .form-row
                      .tooltip-container
                        .label
                          label(for="FileFormatName") Max offset
                          span.tooltip-toggle(aria-label='Some explanation comes here' tabindex='0')
                            .i-wrapper
                              i.fa.fa-solid.fa-circle-info(role="img" title="information icon")
                      input(name="FileFormatName" id="FileFormatName")
                  button.black.small
                    | Add byte sequence
