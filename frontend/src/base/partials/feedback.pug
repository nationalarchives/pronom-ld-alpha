//- options: success, info, alert, error
- var feedback = 'success'

.feedback-container#feedback(th:if="${feedback}")
  .feedback-inner
    .feedback-box(th:classappend="${feedback.cssClass}")
      div
        i.fa-solid(th:classappend="${feedback.icon}")
        h3(th:text="${feedback.statusText}") Feedback status
      p(th:text="${feedback.message}") Feedback message
    button.bordered-black.medium(onclick="closeFeedback()") OK
    
    
