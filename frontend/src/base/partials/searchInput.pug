seation.search-input-container
  .search-input
    form(aria-label="Search for file format, software or vendor")
      fieldset
        legend.sr-only Enter search file format name, PUID or keywords
        div
          input(type="search" id="pronom_search" placeholder="Search for file format, software or vendor...")
          button(type="submit")
            i.fa-solid.fa-magnifying-glass(aria-hidden="true")
            | Search
  .filters(aria-label="Filters")
    h4 Filters
    fieldset
      legend.sr-only Select filter
      div.selected
        input#extension(type='checkbox' name='format' value='' checked="true") 
        label(for='extension') File format extension
      div
        input#name(type='checkbox' name='format' value='')
        label(for='name') File format name
      div
        input#type(type='checkbox' name='format' value='')
        label(for='type') File format name
      div
        input#signature(type='checkbox' name='format' value='')
        label(for='signature') Signature
      div
        input#puid(type='checkbox' name='format' value='')
        label(for='puid') PUID

section.search-output
  h4 Results
    span (32)
  .additionals
    .manage-results
      .result-counts
        form(aria-label="Set number of result per page")
          fieldset
            label(for="results_per_page") Show
            legend.sr-only Change number of results per page
            div
              input(id="results_per_page" class="small" maxlength="2" type="number" min="5" max="99" value="5")
      .sort-by
        form(aria-label="Sort search results by selected measure")
          fieldset
            legend.sr-only Sort search results by selected measure
            label(for="sort_by") Sort by
            div
              select(id="sort_by")
                option(value='relevance') relevance
                option(value='type') type
                option(value='name') name
                option(value='puid') PUID
    .save-options
      label Save as
      .button-list
        button.xsmall.bordered-blue
          | XML
        button.xsmall.bordered-blue
          | CSV
        .dropdown-group
          button.xsmall.bordered-blue
            | RDF
          select(id="sort_by")
            option(value='0') TTL
            option(value='1') NT
            option(value='2') RDF/XML
