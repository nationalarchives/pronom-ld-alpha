.save-options
  label Save as
  .button-list
    a(target="_blank", th:href="'/'+${ff.formattedPuid}+'.xml'", download)
      button.small.bordered-blue XML
    a(target="_blank", th:href="'/'+${ff.formattedPuid}+'.csv'", download)
      button.small.bordered-blue CSV
    .dropdown-group
      form(target="_blank", th:action="'/'+${ff.formattedPuid}", method="GET")
        button.small.bordered-blue(type="submit") RDF
        label.sr-only(for="format") Select RDF type
        select(name="format" id="format")
          option(value='ttl') TTL
          option(value='nt') NT
          option(value='rdf') RDF/XML
          option(value='n3') N3
          option(value='jsonld') JSON-LD